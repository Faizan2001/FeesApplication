<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FeesApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- OnBoarding styles -->
    <style name="OnBoardingTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_xx_large</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="OnBoardingSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/colorGreenDarker</item>
        <item name="android:textSize">@dimen/text_xx_medium</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="OnBoarding.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/onboarding_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_button_accent</item>
        <item name="android:textSize">@dimen/text_xx_medium</item>
        <item name="android:textColor">@drawable/button_text_color_selector</item>
    </style>


</resources>